pkgname=stalker-scripts
_pkgname=stalker-scripts
_destname1="/usr/local/bin"
pkgver=1.0
pkgrel=1
pkgdesc="System Scipts for S.T.A.L.K.E.R. OS"
arch=('any')
url="https://github.com/stalker-os/stalker-pkgbuild/local_pkgbuild/stalker-scripts"
license=('MIT')
depends=(light xorg-xbacklight)
provides=(${pkgname})
options=(!strip !emptydirs)

package() {
    install -dm755 ${pkgdir}${_destname1}
    cp -rf ../scripts/* ${pkgdir}${_destname1} 
}
